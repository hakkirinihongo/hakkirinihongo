  font-weight: 700 !important;
  opacity: 1 !important;
}


/* Pagina Articoli: titolo card in grassetto */
.page-articles a{
  font-weight: 700 !important;
}
/* ====== FORZA TITOLO CARD NELLA PAGINA ARTICOLI ====== */
.page-articles *{
  font-weight: inherit;
}

