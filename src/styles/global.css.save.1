/*
 * Stili globali per Hakkiri Nihongo.
 * Il design utilizza una palette di colori caldi e puliti e mette
 * in evidenza i contenuti in modo chiaro. Sentiti libero di
 * personalizzare questi valori per adattarli alle tue preferenze.
 */

:root {
  --primary-color: #c0392b; /* Rosso intenso per accenti e link */
  --secondary-color: #f9f5f3; /* Sfondo tenue per sezioni e carte */
  --text-color: #2d3748; /* Testo principale */
  --heading-color: #1a202c; /* Colore per titoli */
  --border-radius: 8px;
  --container-width: 1000px;
}

* {
  box-sizing: border-box;
}

body {
  margin: 0;
  padding: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen,
    Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  line-height: 1.6;
  color: var(--text-color);
  background-color: #ffffff;
}

a {
  color: var(--primary-color);
  text-decoration: none;
  transition: color 0.2s ease;
}

a:hover {
  color: #e74c3c;
}

.container {
  max-width: var(--container-width);
  margin-left: auto;
  margin-right: auto;
  padding-left: 1rem;
  padding-right: 1rem;
}

/* Header */
/*
.site-header {
  background-color: var(--primary-color);
  color: #ffffff;
}

  margin: 0;
  font-size: 1.5rem;
  font-weight: 700;
}

.site-header a {
  color: #ffffff;
  margin-right: 1rem;
  font-weight: 600;
}

.site-header a:hover {
  text-decoration: underline;
}

/* Footer */
.site-footer {
  margin-top: 3rem;
  padding: 1rem 0;
  text-align: center;
  font-size: 0.875rem;
  background-color: var(--secondary-color);
  color: var(--text-color);
}

/* Home page */
.hero {
  padding: 3rem 1rem;
  text-align: center;
  background-color: var(--secondary-color);
  border-bottom: 1px solid #e2e8f0;
}

.hero h2 {
  margin-top: 0;
  font-size: 2rem;
  color: var(--heading-color);
}

.categories {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1rem;
  margin-top: 2rem;
}

.category-card {
  display: block;
  padding: 1.5rem;
  border: 1px solid #ececec;
  border-radius: var(--border-radius);
  background-color: #ffffff;
  transition: box-shadow 0.2s ease, transform 0.2s ease;
}

.category-card h3 {
  margin-top: 0;
  margin-bottom: 0.5rem;
  font-size: 1.25rem;
  color: var(--primary-color);
}

.category-card p {
  margin: 0;
  font-size: 0.875rem;
  color: var(--text-color);
}

.category-card:hover {
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
  transform: translateY(-3px);
}

/* Category navigation on articles page */
.category-nav {
  display: flex;
  flex-wrap: wrap;
  margin-top: 1.5rem;
  gap: 0.5rem;
}

.category-nav a {
  padding: 0.5rem 0.75rem;
  border-radius: var(--border-radius);
  border: 1px solid var(--primary-color);
  color: var(--primary-color);
  background-color: #ffffff;
  font-size: 0.875rem;
  transition: background-color 0.2s ease, color 0.2s ease;
}

.category-nav a.active,
.category-nav a:hover {
  background-color: var(--primary-color);
  color: #ffffff;
}

/* Article list */
.post-list {
  list-style: none;
  padding: 0;
  margin-top: 2rem;
}

.post-item {
  padding: 1rem 0;
  border-bottom: 1px solid #ececec;
}

.post-item:last-child {
  border-bottom: none;
}

.post-item h3 {
  margin: 0 0 0.25rem 0;
  font-size: 1.25rem;
  color: var(--heading-color);
}

.post-item p {
  margin: 0 0 0.5rem 0;
  font-size: 0.875rem;
  color: var(--text-color);
}

.post-meta {
  font-size: 0.75rem;
  color: #6b7280;
}

.post-meta time {
  margin-right: 0.5rem;
}

.tag,
.series {
  display: inline-block;
  margin-right: 0.5rem;
  padding: 0.25rem 0.5rem;
  font-size: 0.75rem;
  border-radius: var(--border-radius);
  background-color: var(--secondary-color);
  color: var(--primary-color);
  border: 1px solid var(--primary-color);
}

.tag:last-child,
.series:last-child {
  margin-right: 0;
}

/* Single article */
article h1 {
  margin-top: 0;
  margin-bottom: 0.5rem;
  font-size: 2rem;
  color: var(--heading-color);
}

article .post-content > *:first-child {
  margin-top: 0;
}

article .post-content {
  margin-top: 1.5rem;
  line-height: 1.7;
  font-size: 1rem;
}

/* LOGO (JP + IT) */
/* Logo: comportamento da logo, non da link */
.site-logo{
  display: inline-flex;
  align-items: baseline;
  gap: 0.6rem;
  text-decoration: none;
  color: inherit;
  cursor: default;
}

.site-logo:hover,
.site-logo:focus,
.site-logo:active{
  text-decoration: none;
  color: inherit;
}

/* ===== FIX DEFINITIVO LOGO (override totale) ===== */
.site-header .site-title > a.site-logo,
.site-header .site-title > a.site-logo:hover,
.site-header .site-title > a.site-logo:focus,
.site-header .site-title > a.site-logo:active{
  text-decoration: none !important;
  color: inherit !important;
  cursor: default !important;
}

.site-header .site-title > a.site-logo{
  display: inline-flex !important;
  align-items: baseline !important;
  gap: 0.6rem !important;
}

/* dimensioni SOBRIE (non “ingrossate”) */
.site-header .site-title .logo-jp{
  font-weight: 700;
  font-size: 1.05rem;
}

.site-header .site-title .logo-it{
  font-size: 0.95rem;
  opacity: 0.85;
}


